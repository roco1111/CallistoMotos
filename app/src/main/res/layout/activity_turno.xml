<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"

    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/datos_turno"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/id_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fecha"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dato_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nro_viaje"

                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_below="@id/id_fecha"
            android:orientation="vertical">
            <TextView
                android:id="@+id/inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hora_inicio"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dato_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_fin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_below="@id/id_inicio"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hora_fin"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dato_fin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_kms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_below="@id/id_fin"
            android:orientation="vertical">
            <TextView
                android:id="@+id/kms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kms"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dato_kms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_recaudacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_below="@id/id_kms"
            android:orientation="vertical">
            <TextView
                android:id="@+id/recaudacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recaudacion"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dato_recaudacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto" />
        </LinearLayout>



        <FrameLayout
            android:id="@+id/idViajes"
            android:layout_width="@dimen/campos_width_medio"
            android:layout_height="@dimen/alto_imagen"
            android:layout_above="@id/idTickets"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp">
            <Button
                android:id="@+id/buttonViaje"
                android:layout_width="@dimen/campos_width_medio"
                android:layout_height="@dimen/alto_imagen"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/boton"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:id="@+id/textViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:textSize="@dimen/tamanio_parrafo"
                android:textColor="@color/green_500"
                android:elevation="@dimen/elevation"
                android:text="@string/ver_viaje" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/idTickets"
            android:layout_width="@dimen/campos_width_medio"
            android:layout_height="@dimen/alto_imagen"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp">
            <Button
                android:id="@+id/buttonTicket"
                android:layout_width="@dimen/campos_width_medio"
                android:layout_height="@dimen/alto_imagen"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/boton"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:id="@+id/textTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:textSize="@dimen/tamanio_parrafo"
                android:textColor="@color/green_500"
                android:elevation="@dimen/elevation"
                android:text="@string/ticket" />
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>