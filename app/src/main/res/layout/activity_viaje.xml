<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"

    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/sin_elementos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ImEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="10dp"
            android:foregroundGravity="center"
            android:paddingStart="30dp"
            android:src="@drawable/no_elementos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TwEmpty"
            android:text="@string/sin_viaje"
            android:textAlignment="center"
            android:textSize="@dimen/tamanio_subtitulo"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="90dp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/datos_viaje"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/id_viaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/viaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nro_viaje"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dato_viaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nro_viaje"

                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_solicitante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_viaje"
            android:layout_marginTop="22dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/solicitante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/solicitante"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dato_solicitante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nro_viaje"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_documento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_solicitante"
            android:layout_marginTop="22dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/documento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/documento"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dato_documento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nro_viaje"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_salida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_documento"
            android:layout_marginTop="22dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/salida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/salida"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dato_salida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nro_viaje"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_destino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_salida"
            android:layout_marginTop="22dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/destino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/destino"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dato_destino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nro_viaje"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/tamanio_texto" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/id_botones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_destino"
            android:layout_marginTop="@dimen/margin_top"
            android:orientation="vertical">
        <Button
            android:id="@+id/buttonInicio"
            android:layout_width="@dimen/campos_width_medio"
            android:layout_height="@dimen/alto_imagen"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/iniciar_viaje"
            tools:ignore="RtlHardcoded" />

            <Button
                android:id="@+id/buttonAnular"
                android:layout_width="@dimen/campos_width_medio"
                android:layout_height="@dimen/alto_imagen"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/buttonInicio"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/anular_viaje"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>