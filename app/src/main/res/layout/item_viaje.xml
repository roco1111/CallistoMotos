<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="8dp"
    android:background="@color/colorPrimary"
    android:minHeight="?attr/listPreferredItemHeight"
    app:cardUseCompatPadding="true"
    app:contentPaddingBottom="8dp"
    app:contentPaddingLeft="@dimen/activity_horizontal_margin"
    app:contentPaddingRight="@dimen/activity_horizontal_margin"
    app:contentPaddingTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_lugar"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/salida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:textSize="@dimen/tamanio_texto"
            android:text="TextView" />

        <ImageView
            android:id="@+id/indicador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingStart="30dp"
            android:src="@drawable/terminado" />
    </RelativeLayout>

        <TextView
            android:id="@+id/destino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/id_lugar"
            android:textStyle="bold"
            android:textSize="@dimen/tamanio_texto"
            android:text="TextView" />

        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:id="@+id/id_hora"
            android:layout_below="@id/destino"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/tamanio_texto"
            android:layout_alignParentStart="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/importe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tamanio_texto"
            android:layout_alignParentEnd="true"
            android:text="TextView" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>